---
import { getCollection } from 'astro:content';
const posts = await getCollection('posts');

import Layout from "../../layouts/Layout.astro";
---

<Layout title="Блог">
    <h1>Blog</h1>
        {posts.map((post) => (
                <li>
                    <a class="text-blue-300" href={`/blog/${post.slug}`}>{post.data.title}</a>
                    <p>{post.data.subtitle}</p>
                </li>
        ))}
</Layout>