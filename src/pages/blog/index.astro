---
import { getCollection } from "astro:content";
const posts = (await getCollection("posts")).sort(
  (a, b) => b.data.order - a.data.order
);

import Layout from "../../layouts/Layout.astro";
---

<Layout title="Блог">
  <section class="mx-auto w-full max-w-[1024px] px-4 py-16">
    <a
      href="/"
      class="flex items-center gap-2 text-bg-dark underline underline-offset-2"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="size-4"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M15.75 19.5 8.25 12l7.5-7.5"></path>
      </svg>

      На главную</a
    >

    <h1 class="mb-10 mt-6 text-4xl">Блог</h1>
    <div class="grid grid-cols-1 gap-6 md:gap-8 lg:grid-cols-2">
      {
        posts.map((post) => (
          <a
            href={`/blog/${post.slug}`}
            class="flex max-w-[350px] flex-col bg-bg-light-green sm:max-w-none sm:flex-row sm:items-center sm:justify-center md:min-w-[700px] md:max-w-none lg:min-w-[500px]"
          >
            <div class="w-full md:w-1/3">
              <img
                class="aspect-square w-full object-cover sm:min-w-[300px] md:min-w-0 lg:min-h-[220px]"
                src={post.data.img}
                alt="Blog Image"
              />
            </div>

            <div class="flex min-h-[220px] flex-col p-6 sm:min-w-[320px] sm:justify-center md:w-9/12">
              <p class="text-xs">{post.data.date}</p>
              <h3 class="mb-4 truncate text-2xl">{post.data.title}</h3>
              <p />
              <p class="text-sm">{post.data.subtitle}</p>
            </div>
          </a>
        ))
      }
    </div>
  </section>
</Layout>
